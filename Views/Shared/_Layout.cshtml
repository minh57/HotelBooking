                </div>
            </div>


        </nav>
        
        @RenderBody()

        <!-- Footer -->
        <div id="footer" class="container-fluid pt-3" >

            <div class="row">

                <div class="col">
                    <a>
                        <h1>Logo</h1>
                        <p>Giới thiệu về công ty</p>
                    </a>
                </div>

                <div class="col">
                    <h3>Liên kết nhanh</h3>
                    <ul>
                        <li><a href="/">Trang chủ</a></li>
                        <li><a href="/gioi-thieu/">Giới thiệu</a></li>
