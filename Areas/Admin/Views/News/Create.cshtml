
@model HotelBooking.Models.NewsCreateVM
@{
    ViewBag.Title = "Thêm thông tin";
}


<div class="cardContainer mw-100">

    <h2>Thêm thông tin</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.News.ID)
        <div>
            <label>Tiêu đề</label>
            @Html.TextBoxFor(m => m.News.Title, new { @class = "form-control" })

        </div>
        <div>
            <label class="d-block">Chuyên mục</label>
            @Html.DropDownListFor(
                m => m.News.ID_Category,
                Model.Categories,
                "Chọn chuyên mục"
           )
        </div>
        <div>
            <label>Mô tả</label>
            @Html.TextBoxFor(m => m.News.Detail, new { @class = "form-control" })
        </div>
        <div>
            <label>Ảnh xem trước</label>
            @Html.TextBoxFor(m => m.News.Thumbnail, new { @class = "form-control" })
        </div>
        <div>
            <label>Chi tiết</label>
            @Html.TextAreaFor(m => m.News.Description, new { @class = "form-control",@id="txtDetail" })
        </div>
        <div>
            <label>Từ khóa</label>
            @Html.TextBoxFor(m => m.News.Keywords, new { @class = "form-control" })
        </div>
        <div class="form-check">
            <label>Hiển thị</label>
            @Html.CheckBoxFor(m => m.News.isPublic, new { @class = "form-check-input" })
        </div>
        <button type="submit" class="btn btn-primary">Xác nhận</button>
    }

</div>

