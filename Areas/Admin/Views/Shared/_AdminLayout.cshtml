@inherits System.Web.Mvc.WebViewPage<dynamic>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="index.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- CkEditor -->
    <link rel="stylesheet" href="https://cdn.ckeditor.com/ckeditor5/47.3.0/ckeditor5.css" />
    <script src="https://cdn.ckeditor.com/ckeditor5/47.3.0/ckeditor5.umd.js"></script>

 
    <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
    


</head>
<body>

    <div class="container p-0 m-0 mw-100">
        <!-- Side bar -->
        <div class="row">
            <div id="sidebar" class="col-md-3 pe-0">

                <h1 class="p-3 text-center "><i class="bi bi-x-diamond-fill pe-2" width="24" height="24"></i>Bootstrap Admin</h1>
                <nav class="nav flex-column mw-100">
                    <a class="nav-link active pt-3 pb-3" aria-current="page" href="#"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
                    <a class="nav-link pt-3 pb-3" href="#"><i class="bi bi-clipboard-data me-2"></i>Chart</a>
                    <a class="nav-link pt-3 pb-3" href="#"><i class="bi bi-table me-2"></i>Thêm tin tức</a>
                    <a class="nav-link pt-3 pb-3" href="form.html"><i class="bi bi-table me-2"></i>Form</a>
                    <a class="nav-link disabled pt-3 pb-3" href="#" tabindex="-1" aria-disabled="true"><i class="bi bi-box-arrow-right me-2"></i>Log out</a>
                </nav>
            </div>

            <!-- Main -->
            <div id="main" class="col-md-9 ps-0">
                <div id="nav-bar">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                        <div class="container-fluid">

                            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                    <li class="nav-item">
                                        <a class="nav-link active" aria-current="page" href="index.html">Dashboard</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Chart</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="table.html">Table</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="form.html">Form</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                                    </li>
                                </ul>
                                <form class="d-flex">
                                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                    <button class="btn btn-outline-success" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </nav>
                </div>
                <div id="main-content" class="ps-3 pe-3">
                    <h1>@ViewBag.Title</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                        </ol>
                    </nav>

                </div>

                @RenderBody()

                <div id="footer">
                    <p class="mb-0 p-5 text-center">Copyright © Your Website 2020</p>
                </div>
            </div>

        </div>
    </div>
</body>





<script>
    $(document).ready(function () {
        $("#sidebar .nav-link").click(function () {
            $("#sidebar .nav-link").removeClass("active");
            $(this).addClass("active");
        })
    });
</script>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>